movies = ['Runner' , 'inception' , 'Intersteller']
choice = input('Enter your name of movie: ')
if choice in movies :
    print('yes, it\'s here!')
else :
    print('Oh! we\'re sorry. We don\'t have this movie')
    movies.append(choice)
    print('But we have added to the list' '\nthe new list is:' '\n' ,str(movies))
print(movies[0]) 
print(movies[-1])
print(' ')
position = input('write the name of movie you wanna know the position: ')
print('The movie is in the position of' ,str(movies.index(position) + 1))
print('')
print('the first two movie is ' ,str(movies[0:2]))
print('')
b = input('write the movie name in second position: ')
print(str(b), 'will be inserted:')
movies.insert(1, b)
print(movies)
print('')
print('if you wanna replace the third one,')
name = input('write the name: ')
movies[2:3] = [name]
print(movies)
remove = input('if you wanna remove a movie, write it: ')
movies.remove(remove)
print('')
movies.sort()
print('your movies are alphabetically in order:' ,str(movies))
